    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <controls:Accordion HorizontalAlignment="Stretch" SelectionMode="ZeroOrOne" x:Name="item" >
            <controls:Accordion.ItemTemplate>
                <DataTemplate>
                    <controls:AccordionItem Header="{Binding Key}" FontWeight="Black" FontSize="20" >
                        <controls:AccordionItem.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <ListView Background="Gray" ItemsSource="{Binding}">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <ListViewItem Content="{Binding Name}"></ListViewItem>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </StackPanel>
                            </DataTemplate>
                        </controls:AccordionItem.ContentTemplate>
                    </controls:AccordionItem>
                </DataTemplate>
            </controls:Accordion.ItemTemplate>
        </controls:Accordion>

