                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger  MinWindowWidth="700"></AdaptiveTrigger>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                       
                        <Setter Target="FromDateStackPanel.(Grid.Row)" Value="0"></Setter>
                        <Setter Target="FromDateStackPanel.(Grid.Column)" Value="0"></Setter>
                        <Setter Target="ToDateStackPanel.(Grid.Row)" Value="1"></Setter>
                        <Setter Target="ToDateStackPanel.(Grid.Column)" Value="0"></Setter>
                        <Setter Target="FlexibaleLeavelStackPanel.(Grid.Row)" Value="2"></Setter>
                        <Setter Target="FlexibaleLeavelStackPanel.(Grid.Column)" Value="0"></Setter>
                        <Setter Target="MyDateFromTextBlock.Text" Value="From:"></Setter>
                        <Setter Target="FlexibleLeaveTextBlock.Text" Value="FlexibleLeave(hours):"></Setter>
                        <Setter Target="MyDateFromTextBlock.Width" Value="55"></Setter>
                        <Setter Target="ToDateTextBlock.Width" Value="55"></Setter>
                        <Setter Target="FromTimeStackPanel.(Grid.Row)" Value="0"></Setter>
                        <Setter Target="FromTimeStackPanel.(Grid.Column)" Value="0"></Setter>
                        <Setter Target="ToTimeStackPanel.(Grid.Row)" Value="1"></Setter>
                        <Setter Target="ToTimeStackPanel.(Grid.Column)" Value="0"></Setter>
                        <Setter Target="HourStackPanel.(Grid.Row)" Value="2"></Setter>
                        <Setter Target="HourStackPanel.(Grid.Column)" Value="0"></Setter>
                        <Setter Target="MyTimeFromTextBlock.Text" Value="From:"></Setter>
                        <Setter Target="HourTextBlock.Text" Value="Hours:"></Setter>
                        <Setter Target="MyTimeFromTextBlock.Width" Value="57"></Setter>
                        <Setter Target="ToTimeTextBlock.Width" Value="57"></Setter>
                        <Setter Target="HourTextBlock.Width" Value="57"></Setter>
                    </VisualState.Setters>
                </VisualState>
                
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger  MinWindowWidth="900"></AdaptiveTrigger>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                       
                        <Setter Target="FromDateStackPanel.(Grid.Row)" Value="0"></Setter>
                        <Setter Target="FromDateStackPanel.(Grid.Column)" Value="0"></Setter>
                        <Setter Target="ToDateStackPanel.(Grid.Row)" Value="0"></Setter>
                        <Setter Target="ToDateStackPanel.(Grid.Column)" Value="1"></Setter>
                        <Setter Target="FlexibaleLeavelStackPanel.(Grid.Row)" Value="1"></Setter>
                        <Setter Target="FlexibaleLeavelStackPanel.(Grid.Column)" Value="0"></Setter>
                        <Setter Target="FromTimeStackPanel.(Grid.Row)" Value="0"></Setter>
                        <Setter Target="FromTimeStackPanel.(Grid.Column)" Value="0"></Setter>
                        <Setter Target="ToTimeStackPanel.(Grid.Row)" Value="0"></Setter>
                        <Setter Target="ToTimeStackPanel.(Grid.Column)" Value="1"></Setter>
                        <Setter Target="HourStackPanel.(Grid.Row)" Value="1"></Setter>
                        <Setter Target="HourStackPanel.(Grid.Column)" Value="0"></Setter>
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger  MinWindowWidth="1300"></AdaptiveTrigger>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                       
                        <Setter Target="FromDateStackPanel.(Grid.Row)" Value="0"></Setter>
                        <Setter Target="FromDateStackPanel.(Grid.Column)" Value="0"></Setter>
                        <Setter Target="ToDateStackPanel.(Grid.Row)" Value="0"></Setter>
                        <Setter Target="ToDateStackPanel.(Grid.Column)" Value="1"></Setter>
                        <Setter Target="FlexibaleLeavelStackPanel.(Grid.Row)" Value="0"></Setter>
                        <Setter Target="FlexibaleLeavelStackPanel.(Grid.Column)" Value="2"></Setter>

                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid Margin="10,0,0,0" Name="MyGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            
            <Border BorderThickness="0,0,0,1" BorderBrush="Black">
                <StackPanel Orientation="Horizontal" Grid.Row="0">
                    <Image Source="ms-appx:///Image/Warning-icon.png" Margin="0" Width="25" VerticalAlignment="Center"></Image>
                    <TextBlock Text="Your shift is 9:00-18:00" FontSize="21" VerticalAlignment="Center" Foreground="Red"></TextBlock>
                </StackPanel>
            </Border>
            <Border BorderThickness="0,0,0,1" BorderBrush="Black" Grid.Row="1">
                <Border BorderThickness="0,10,0,0" BorderBrush="#FF0A9DE2">
                    <StackPanel Orientation="Vertical" Grid.Row="1">

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Name="MyTextBlock" Text="Please choose who will ask for leave:" FontSize="21"></TextBlock>
                            <TextBlock Name="SelectedUserTextBox" FontSize="21" VerticalAlignment="Center" Text="{Binding SelectedAlias,Mode=TwoWay}" Width="559" Foreground="Red" Height="30"></TextBlock>
                        </StackPanel>

                            <StackPanel  Name="MyStackPanel" Orientation="Horizontal">

                            <Grid Width="{Binding MyWidthProperty,Mode=TwoWay}">
                                    <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2.1*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="2.3*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="auto"></RowDefinition>
                                </Grid.RowDefinitions>
                                    <RadioButton Grid.Column="0"  Name="ForMySelfRadioButton" VerticalAlignment="Center" Content="For Myself"  FontSize="21">
                                        <i:Interaction.Behaviors>
                                            <core:EventTriggerBehavior EventName="Checked">
                                                <core:InvokeCommandAction Command="{Binding OpenCommand}" CommandParameter="{Binding ElementName=ForMySelfRadioButton}">
                                                </core:InvokeCommandAction>
                                            </core:EventTriggerBehavior>
                                        </i:Interaction.Behaviors>
                                    </RadioButton>


                                    <RadioButton Grid.Column="1" Name="ForOthersRadioButton" Content="For Others" FontSize="21" VerticalAlignment="Center" FlyoutBase.AttachedFlyout="{StaticResource MyFlyout}">
                                        <i:Interaction.Behaviors>
                                            <core:EventTriggerBehavior EventName="Checked">
                                                <core:InvokeCommandAction Command="{Binding OpenCommand}" CommandParameter="{Binding ElementName=ForOthersRadioButton}">
                                                </core:InvokeCommandAction>
                                            </core:EventTriggerBehavior>
                                        </i:Interaction.Behaviors>
                                    </RadioButton>
                                </Grid>
                            </StackPanel>
                 
                    </StackPanel>
                </Border>
            </Border>
            <Border BorderThickness="0,0,0,1" BorderBrush="Black"  Grid.Row="2">

                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <Grid Width="{Binding MyWidthProperty,Mode=TwoWay}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2.1*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="2.3*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>
                    <StackPanel Name="FromDateStackPanel" Orientation="Horizontal" Grid.Column="0">
                        <TextBlock Name="MyDateFromTextBlock" Text="Date break from:" FontSize="21" VerticalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal">
                            <MyControls:TextboxImageUserControl  x:Name="test" MyWidth="110" MyImageSoruce="ms-appx:///Image/calendar-icon.png"></MyControls:TextboxImageUserControl>
                            <!--<TextBox Style="{StaticResource TextBoxStyle1}" BorderThickness="2" BorderBrush="#FF0A9DE2" Name="FromDateTextBox" Width="130" Height="30"/>
                            <Image Name="FromDateImage" Tapped="FromDateImage_Tapped" Width="30" Height="30" Source="ms-appx:///Image/calendar-icon.png"/>-->
                        </StackPanel>
                    </StackPanel>

                        <StackPanel  Orientation="Horizontal" Grid.Column="1" Name="ToDateStackPanel">
                        <TextBlock Name="ToDateTextBlock" Text="To:" FontSize="21" VerticalAlignment="Center"></TextBlock>
                        <StackPanel Orientation="Horizontal">
                            <MyControls:TextboxImageUserControl MyWidth="110" MyImageSoruce="ms-appx:///Image/calendar-icon.png"></MyControls:TextboxImageUserControl>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Name="FlexibaleLeavelStackPanel" Orientation="Horizontal" Grid.Column="2">
                            <TextBlock Name="FlexibleLeaveTextBlock" Text="Available FlexibleLeave (hours):" FontSize="21" VerticalAlignment="Center" ></TextBlock>
                        <StackPanel Orientation="Horizontal" BorderThickness="2">
                            <TextBlock Text="{Binding SelectedUserRecord.OverTime,Mode=TwoWay}" Width="100" Height="30" FontSize="21" VerticalAlignment="Center" Foreground="Red"></TextBlock>
                        </StackPanel>
                    </StackPanel>
                    </Grid>
                </StackPanel>
                
            </Border>
            <Border BorderThickness="0,0,0,1" BorderBrush="Black"  Grid.Row="3">
                <StackPanel Grid.Row="3" Orientation="Horizontal">
                    <Grid Width="{Binding MyWidthProperty,Mode=TwoWay}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2.1*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="2.3*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <StackPanel Name="FromTimeStackPanel" Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Name="MyTimeFromTextBlock" Text="Time break from:" FontSize="21" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal">
                                <MyControls:TextboxImageUserControl HorizontalAlignment="Left" MyWidth="110" MyImageSoruce="ms-appx:///Image/Time-icon.png"></MyControls:TextboxImageUserControl>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Name="ToTimeStackPanel" Grid.Column="1" Orientation="Horizontal" Width="300">
                            <TextBlock Name="ToTimeTextBlock" Text="To:" FontSize="21" VerticalAlignment="Center" ></TextBlock>
                            <StackPanel Orientation="Horizontal">
                                <MyControls:TextboxImageUserControl MyWidth="110" MyImageSoruce="ms-appx:///Image/Time-icon.png"></MyControls:TextboxImageUserControl>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Name="HourStackPanel" Grid.Column="2" Orientation="Horizontal">
                            <TextBlock Name="HourTextBlock" Text="Duration (Hours):" FontSize="21" VerticalAlignment="Center" ></TextBlock>
                            <TextBox Foreground="Red" Style="{StaticResource TextBoxStyle1}" BorderBrush="#FF0A9DE2" Width="110" Height="30"></TextBox>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            <Border BorderThickness="0,0,0,1" BorderBrush="Black"  Grid.Row="4">
                <StackPanel Orientation="Vertical" Grid.Row="4">
                   <MyControls:MyBackUp x:Name="uc"></MyControls:MyBackUp>
                </StackPanel>
            </Border>
            <Border BorderThickness="0,0,0,1" BorderBrush="Black" Grid.Row="5">
                <StackPanel Orientation="Horizontal" Width="{Binding MyWidthProperty,Mode=TwoWay}">
                    <TextBlock Text="Leavel Type:" FontSize="21" Width="120" VerticalAlignment="Center"></TextBlock>

                    <StackPanel Width="{Binding MyWidthProperty,Mode=TwoWay}" Orientation="Horizontal"  Name="LeaveTypeStackPanel">
                    
  
                    <RadioButton Content="Flexible Leave" VerticalAlignment="Center" FontSize="21" Width="200"></RadioButton>
                    <RadioButton Content="Sick Leave" VerticalAlignment="Center" FontSize="21" Width="200"></RadioButton>
                    <RadioButton Content="Annual Leave" VerticalAlignment="Center" FontSize="21" Width="200"></RadioButton>
                </StackPanel>
                </StackPanel>
            </Border>
            <StackPanel Width="{Binding MyWidthProperty,Mode=TwoWay}" Orientation="Vertical"  Grid.Row="6">
                <TextBlock Text="Reason:" FontSize="21" VerticalAlignment="Center" ></TextBlock>
                <RichEditBox Name="MyRichEditBox" BorderBrush="#FF0A9DE2" Height="100" Width="300" HorizontalAlignment="Left" Style="{StaticResource RichEditBoxStyle1}"/>

                <Button Command="{Binding CloseCommand}" Name="SubmitButton" Content="Sumbit" Background="#FF79D8EE" FontSize="21" Style="{StaticResource ButtonStyle1}" HorizontalContentAlignment="Center" VerticalAlignment="Center" Height="45" Width="300" Margin="0,25,0,0"></Button>
            </StackPanel>

          

        </Grid>
    </Grid>
</Page>
